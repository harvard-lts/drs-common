{
  "name": "@axiominfo/drs-common",
  "version": "1.0.0",
  "description": "Common NestJS package for digital repository system",
  "author": "William Welling <william_welling@harvard.edu>",
  "keywords": [
    "nestjs"
  ],
  "readmeFilename": "README.md",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "*.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry":"https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axiominfo/drs-common.git"
  },
  "bugs": {
    "url": "https://github.com/axiominfo/drs-common/issues"
  },
  "homepage": "https://github.com/axiominfo/drs-common#readme",
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.11"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.11",
    "@nestjs/core": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "@nestjs/testing": "8.0.11",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "@types/supertest": "2.0.11",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "openpgp": "^5.0.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
